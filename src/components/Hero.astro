---
import { getImage } from "astro:assets";
import barn from "@/assets/Barn 12 Angle View2.jpeg";
const optimizedBarnImage = await getImage({ src: barn });
---

<div
	id="hero"
	class="container full-width"
	style=`background-image: url(${optimizedBarnImage.src}); background-size: cover; background-position: center;`
>
	<div id="tagline" class="container center-children">
		<div>
			<p>We build</p>
			<h1>outdoor<br />structures</h1>
			<p>
				for all your needs, from barns to sheds and everything in between. We
				also offer services to spruce up your space. Proudly crafted by hand in
				the USA.
			</p>
			<a href="/contact">Get in touch</a>
		</div>
	</div>
</div>

<style lang="scss">
	@use "@/styles/variables";

	$hero-height: 80vh;
	$circle-radius: 120vh;

	#hero {
		flex-direction: row;
		justify-content: flex-end;
		align-items: stretch;
		height: $hero-height;
		padding: 0;
		font-size: 16px;
		overflow: hidden;
	}

	#tagline {
		margin: 0;
		width: 50%;
		height: $circle-radius;
		padding: 0;
		padding-left: 5rem;
		padding-right: 4rem;
		// padding-top: 6rem;
		background: linear-gradient(
			135deg,
			variables.$color-primary,
			variables.$color-accent 200%
		);
		border-top-left-radius: calc($circle-radius / 2);
		border-bottom-left-radius: calc($circle-radius / 2);
		font-weight: 300;
		box-shadow: -0.5rem 0.5rem 2rem variables.$color-primary;
		transform: translateY(calc(2rem - (($circle-radius - $hero-height) / 2)));
	}

	h1 {
		margin: 0;
		margin-top: 0.2rem;
		margin-bottom: 0.5rem;
		font-size: 2.5rem;
		font-family: "Silverfake";
		text-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.5);
		color: #8de199;
	}

	p {
		max-width: 19rem;
		margin: 0;
		font-size: 1.125rem;
		line-height: 1.5;
	}

	a {
		display: inline-block;
		margin-top: 2rem;
		padding: 0.75rem 1.5rem;
		border: 0.1rem solid variables.$color-accent;
		border-radius: 0.5rem;
		font-size: 1.25rem;
		font-weight: 400;
		text-decoration: none;
		color: variables.$color-secondary;
		background: variables.$color-accent;
		text-transform: uppercase;
		transition:
			background-color 0.1s linear,
			color 0.1s linear;

		&:hover {
			background: transparent;
			color: #8de199;
			border-color: #8de199;
		}
	}
</style>
