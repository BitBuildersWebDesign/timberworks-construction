---
import { Image } from "astro:assets";
import barn from "@/assets/front.jpeg";
---

<div id="outer" class="container full-width">
	<div class="img-container">
		<Image src={barn} alt="Barn" width={500} height={500} />
	</div>

	<div class="container center-children">
		<div>
			<p>We build</p>
			<h1>outdoor<br />structures</h1>
			<p>
				for all your needs, from barns to sheds and everything in between. We
				also offer services to spruce up your space. Proudly crafted by hand in
				the USA.
			</p>

			<a href="#">Get in touch</a>
		</div>
	</div>
</div>

<style lang="scss">
	@use "@/styles/variables";

	#outer {
		flex-direction: column;
		min-height: min(75vh, 500px);
		padding: 0;
		color: #fff;
		font-size: 16px;
	}

	.img-container {
		width: 100%;
		max-height: 600px;
		overflow: hidden;
	}

	img {
		display: block;
		min-width: 100%;
		min-height: 100%;
		object-fit: cover;
	}

	div.container.center-children {
		flex-grow: 1;
		padding: 0 2rem 3rem 2rem;
		background: linear-gradient(
			135deg,
			variables.$color-accent,
			variables.$color-primary 65%
		);
	}

	h1 {
		margin: 0;
		margin-top: 0.2rem;
		margin-bottom: 0.5rem;
		font-size: 2.5rem;
		font-family: "Silverfake";
		text-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.5);
		color: #8de199;
	}

	p {
		max-width: 19rem;
		margin: 0;
		font-size: 1.125rem;
		line-height: 1.5;
	}

	a {
		display: inline-block;
		margin: 2rem 0;
		padding: 0.75rem 1.5rem;
		border: 0.1rem solid variables.$color-accent;
		border-radius: 0.5rem;
		font-size: 1.25rem;
		font-weight: 500;
		text-decoration: none;
		color: variables.$color-secondary;
		background: variables.$color-accent;
		text-transform: uppercase;
		transition:
			background-color 0.1s linear,
			color 0.1s linear;

		&:hover {
			background: transparent;
			color: variables.$color-accent;
		}
	}

	@media screen and (min-width: 400px) {
	}

	@media screen and (min-width: 576px) {
	}

	@media screen and (min-width: 768px) {
		div.container.center-children {
			padding: 3rem;
		}
	}

	@media screen and (min-width: 992px) {
		#outer {
			flex-direction: row;
		}

		div.container.center-children {
			padding: 5rem;
			padding-top: 12rem;
		}

		.img-container {
			max-width: 37%;
			max-height: 100%;
		}

		img {
			min-width: 100%;
		}
	}

	@media screen and (min-width: 1200px) {
	}

	@media screen and (min-width: 1400px) {
	}

	@media screen and (min-width: 2000px) {
	}

	@media screen and (min-width: 3000px) {
	}
</style>
